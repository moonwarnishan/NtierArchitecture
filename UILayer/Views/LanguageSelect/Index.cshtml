@model LanguageModel

@{
    ViewBag.Title = "Language Select";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectConfirm">
            <div class="form-group">
                <label asp-for="@Model.AllLanguages" class="control-label"></label>
                <select class="form-control" asp-for="Id" asp-items="@Model.AllLanguages">
                </select>
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="Submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
