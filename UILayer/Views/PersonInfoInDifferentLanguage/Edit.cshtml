@model PersonInfoInDifferentLanguagesModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Update Person Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="PersonInfoInDifferentLanguage" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input disabled asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label disabled asp-for="Gender" class="control-label"></label>
                <select class="form-control" asp-for="Gender" asp-items="@Model.AllGenders">
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <select disabled class="form-control" asp-for="MaritalStatus" asp-items="@Model.AllMaterialStatus">
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="LanguageId" class="control-label"></label>
                <select disabled asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select disabled asp-for="PersonId" class="form-control" asp-items="@Model.AllPersons"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="PersonInfoInDifferentLanguage" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}